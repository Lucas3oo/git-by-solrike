{
  "name": "git-by-solrike",
  "displayName": "Git by Solrike",
  "description": "Adds popular Git commands to the explorer context menu. For those that miss context menu items from Eclipse.",
  "version": "0.0.2",
  "license": "MIT",
  "author": "Lucas Persson",
  "publisher": "solrike",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "menu"
  ],
  "homepage": "https://github.com/Lucas3oo/git-by-solrike",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lucas3oo/git-by-solrike.git"
  },
  "bugs": {
    "url": "https://github.com/Lucas3oo/git-by-solrike/issues"
  },
  "icon": "assets/icon.png",
  "readme": "README.md",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Git",
        "command": "git-by-solrike.openChangesWithBranch",
        "title": "Compare with branch"
      },
      {
        "category": "Git",
        "command": "git-by-solrike.openChanges",
        "title": "Compare with HEAD revision"
      },
      {
        "category": "Git",
        "command": "git-by-solrike.discardChanges",
        "title": "Replace with HEAD revision"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "git-by-solrike.openChangesWithBranch",
          "when": "!explorerResourceIsFolder",
          "group": "Git@15"
        },
        {
          "command": "git-by-solrike.openChanges",
          "when": "!explorerResourceIsFolder",
          "group": "Git@20"
        },
        {
          "command": "git-by-solrike.discardChanges",
          "when": "!explorerResourceIsFolder",
          "group": "Git@30"
        }
      ],
      "view/item/context": [
        {
          "command": "git-by-solrike.openChangesWithBranch",
          "when": "view == javaProjectExplorer && viewItem =~ /java:[type|file](?=.*?\\b\\+uri\\b)/",
          "group": "Git@15"
        },
        {
          "command": "git-by-solrike.openChanges",
          "when": "view == javaProjectExplorer && viewItem =~ /java:[type|file](?=.*?\\b\\+uri\\b)/",
          "group": "Git@20"
        },
        {
          "command": "git-by-solrike.discardChanges",
          "when": "view == javaProjectExplorer && viewItem =~ /java:[type|file](?=.*?\\b\\+uri\\b)/",
          "group": "Git@30"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
